{
    "level": "info",
    "topics": [
        "health"
    ],
    "expand_for": "large",
    "evaluation": "unknown",
    "title_element": {
        "title": "[% lang('data_quality_errors_panel_title') %]",
        "subtitle": "[% lang('data_quality_errors_panel_subtitle') %]",
        "icon_url": "[% static_subdomain %]/images/icons/dist/healing.svg",
        "icon_color_from_evaluation": true,
    },
    "elements": [
        {
            "element_type": "title",
            "text_element": {
                "html": `[% FILTER collapse %]
                    <ul>
                    [% FOREACH action_pair IN pair.value -%]
                        <li id="data-error-[% action_pair.key %]">[% action_pair.value.$description_key %]</li>
                    [%- END %]
                    </ul>
                [% END %]`
            },
        },
        [% 
            # we need description_key variable because we can't use ':' in key directly
            description_key = 'description:en'
            action_name = "action_$fix_action"
        %]
        [% FOREACH pair IN panel.quality_errors.pairs %]
            [%
                fix_action = pair.key
            %]
            {
                "element_type": "text",
                "text_element": {
                    "html": `[% FILTER collapse %]
                        <ul>
                        [% FOREACH action_pair IN pair.value -%]
                            <li id="data-error-[% action_pair.key %]">[% action_pair.value.$description_key %]</li>
                        [%- END %]
                        </ul>
                    [% END %]`
                },
            },
            [% IF fix_action != 'undef' %]
                {
                    "element_type": "action",
                    "action_element": {
                        "html": `[% lang(action_name) %]`,
                        "actions": [
                            "[% fix_action %]",
                        ]
                    },
                },
            [% END %]
        [% END %]
    ]
}
