{
    "level": "info",
    "topics": [
        "health"
    ],
    "expanded": false,
    "evaluation": "unknown",
    "title_element": {
        "title": "[% IF panel.title.defined %][% edq(panel.title) %][% ELSE %][% edq(lang('nutrition_data_table')) %] ([% edq(lang('detailed_data')) %])[% END %]",
        [% IF panel.subtitle.defined %]"subtitle": "[% edq(panel.subtitle) %]",[% END %]
    },
    "elements": [
        {
            "element_type": "table",
            "table_element": {
                "id": "nutrition_facts_table_with_input_sets",
                "title": "[% edq(lang('nutrition_data_table')) %]",           
                "columns": [
                    {
                        "text": "[% panel.nutrition_table.header.name %]",
                        "type": "text",
                        "style": "max-width:15rem",
                    },
                    [% FOREACH column IN panel.nutrition_table.header.columns %]
                        {
                            "text": "[% column.name %]",
                            [% IF column.short_name.defined %]
                                "text_for_small_screens": "[% column.short_name %]",
                            [% END %]
                            "type": "text",
                        },
                    [% END %]
                ],
                "rows": [
                    [% FOREACH row IN panel.nutrition_table.rows %]
                    {
                        "values": [
                            {
                                // Level is 0 for main nutrients, 1 for sub-nutrients, 2 for sub-sub-nutrients
                                "level": [% row.level %],
                                "text": "[% row.name %]",
                                "style": "max-width:15rem",
                            },
                            [% FOREACH column IN row.columns %]
                            {  
                                 "text": "[% column.value %]",
                                [% IF column.evaluation.defined %]
                                    "evaluation": "[% column.evaluation %]",
                                [% END %]
                            },
                            [% END %]
                        ]
                    },
                    [% END %]
                ]
            }
        },
    ]
}
