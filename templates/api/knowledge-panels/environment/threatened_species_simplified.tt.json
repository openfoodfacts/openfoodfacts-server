{
    "level" :"info",
    "topics": [
        "environment"
    ],
    "expanded": false,
    "half_width_on_mobile": true,   
    [% IF product.environmental_score_data.adjustments.threatened_species.warning.defined %]
        "evaluation": "neutral",
        "title_element": {
            "name": "[% edq(lang('environmental_score_threatened_species')) %]",
            "value_string": "[% edq(lang('may_contain_palm_oil')) %]",
            "type": "string",
            "icon_color_from_evaluation": true,
            "icon_url": "[% static_subdomain %]/images/icons/dist/monkey_uncertain.svg",
            "icon_size": "small",
        },    
        "elements": [
            {
                "element_type": "text",
                "text_element": {
                    "type": "summary",
                    "html": `
                    [% edq(lang('missing_ingredients_list')) %]
                    [% lang('environmental_score_ingredients_unknown') %]
                    [% lang('environmental_score_edit_for_more_precise_environmental_score') %]<br><br>
                    [% lang('environmental_score_platform_prompt_environmental_score_modal') %]
                        `
                }
            },
        ]
    [% ELSIF product.environmental_score_data.adjustments.threatened_species.value.defined && product.environmental_score_data.adjustments.threatened_species.value < 0 %]
        "evaluation": "bad",
        "title_element": {
            "name": "[% edq(lang('environmental_score_threatened_species')) %]",
            "value_string": "[% edq(lang('contains_palm_oil')) %]",
            "type": "string",
            "icon_url": "[% static_subdomain %]/images/icons/dist/palm-oil.svg",
            "icon_color_from_evaluation": true,
            "icon_size": "small",
        },
        "elements": [
            {
                "element_type": "text",
                "text_element": {
                    "type": "summary",
                    "html": `
                        [% edq(lang('contains_palm_oil_subtitle')) %]
                        <p>[% lang('contains_palm_oil_description') %]</p> 
                        `
                }
            },
        ]  
    [% ELSE %]    
        "evaluation": "good",
        "title_element": {
            "name": "[% edq(lang('environmental_score_threatened_species')) %]",
            "value_string": "[% edq(lang('environmental_score_no_species_threatening_ingredients')) %]",
            "type": "string",
            "icon_color_from_evaluation": true,
            "icon_url": "[% static_subdomain %]/images/icons/dist/monkey_happy.svg",
            "icon_size": "small",
        },
    [% END %]    

}
