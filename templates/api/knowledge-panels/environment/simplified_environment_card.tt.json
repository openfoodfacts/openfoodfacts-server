                    [% END %]
                ]
            }
        },
        [% IF panels.carbon_footprint.defined %]
        {
            "element_type": "panel_group",
            "panel_group_element": {
                "panel_ids": [
                    "carbon_footprint"
                ]
            }
        },
        [% END %]
    ],
}
