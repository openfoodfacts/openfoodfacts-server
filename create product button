                #with reactjs 
                
                
                // BarcodeSearchResultPage.js

import React, { useState } from 'react';
import axios from 'axios';

function BarcodeSearchResultPage({ barcode }) {
    const [loading, setLoading] = useState(false);

    const createProduct = async () => {
        setLoading(true);
        try {
            // Make API request to create product
            await axios.post('/api/products', { barcode });
            // Add any success handling here
            console.log('Product created successfully');
        } catch (error) {
            // Handle error
            console.error('Error creating product:', error);
        } finally {
            setLoading(false);
        }
    };

    return (
        <div className="barcode-search-result">
            {/* Display barcode search result here */}
            <button onClick={createProduct} disabled={loading}>
                {loading ? 'Creating...' : 'Create Product'}
            </button>
        </div>
    );
}

export default BarcodeSearchResultPage;


#functionality implementation

// server.js

const express = require('express');
const bodyParser = require('body-parser');
const app = express();
const PORT = 3000;

app.use(bodyParser.json());

// Dummy database to store products
let products = [];

// API endpoint to create a new product
app.post('/api/products', (req, res) => {
    const { barcode } = req.body;
    // Add logic to create product in database
    const newProduct = {
        barcode,
        // Add any other necessary fields for the product
    };
    products.push(newProduct);
    res.status(201).json(newProduct);
});

app.listen(PORT, () => {
    console.log(`Server is running on port ${PORT}`);
});

