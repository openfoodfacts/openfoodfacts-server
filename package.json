    "datatables.net-scroller": "^1.5.1",
    "datatables.net-scroller-zf": "^1.4.4",
    "datatables.net-zf": "^1.10.16",
    "devbridge-autocomplete": "^1.4.9",
    "foundation-icon-fonts": "^0.1.1",
    "foundation-sites": "5.5.3",
    "iolazyload": "^1.2.0",
