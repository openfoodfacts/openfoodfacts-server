{
  "name": "product-opener",
  "version": "1.0.0",
  "description": "",
  "main": "",
  "private": true,
  "scripts": {
    "dev": "webpack --mode development",
    "build": "webpack --mode production",
    "test": "pnpm run test:lang && pnpm run prove && pnpm run lint && pnpm run perlc",
    "test:lang": "pnpm run test:lang:common && pnpm run test:lang:en",
    "test:lang:en": "perl scripts/check_po_file.pl po/tags/en.po",
    "test:lang:common": "perl scripts/check_po_file.pl po/common/en.po",
    "prove": "prove -l",
    "lint": "pnpm run lint:js && pnpm run lint:css && pnpm run lint:scss",
    "lint:js": "eslint html/js/src/",
    "lint:css": "stylelint html/css/src/",
    "lint:scss": "stylelint scss/app.scss",
    "perlc": "pnpm run perlc:startup && pnpm run perlc:cgi",
    "perlc:startup": "perl -c -CS -Ilib lib/startup_apache2.pl",
    "perlc:cgi": "node compile_cgi.js",
    "postinstall": "node -e \"try { require('fs').symlinkSync(require('path').resolve('node_modules/@bower_components'), 'html/bower_components', 'junction') } catch (e) { }\""
  },
  "repository": {
    "type": "git",
