  "bugs": {
    "url": "https://github.com/openfoodfacts/openfoodfacts-server/issues"
  },
  "homepage": "https://github.com/openfoodfacts/openfoodfacts-server#readme",
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "dependencies": {
